{
  "scripts": {
    "compile": "wireit",
    "test": "wireit",
    "build": "wireit",
    "build:stencil": "wireit"
  },
  "library_repo": "ionic-team/stencil",
  "devDependencies": {
    "vite": "^7.2.2"
  },
  "dependencies": {
    "@stencil/core": "4.36.2",
    "wc": "workspace:*"
  },
  "wireit": {
    "build:stencil": {
      "files": [
        "stencil.config.ts",
        "tsconfig.json",
        "src"
      ],
      "output": [
        "build"
      ],
      "command": "stencil build"
    },
    "compile": {
      "dependencies": ["build:stencil"],
      "files": [
        "index.html",
        "build",
        "src",
        "vite.config.js"
      ],
      "output": [
        "dist"
      ],
      "command": "vite build"
    },
   "test": {
      "files": ["dist"],
      "dependencies": [
        "compile",
        "../__shared__/tests:test-files"
      ],
      "command": "pnpm run --filter tests test",
      "output": [
        "results"
      ]
    },
    "build": {
      "dependencies": [
        "test"
      ]
    }
  }
}
