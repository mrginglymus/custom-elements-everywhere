{
  "scripts": {
    "compile": "wireit",
    "test": "wireit",
    "build": "wireit"
  },
  "library_package": "hybrids",
  "library_repo": "hybridsjs/hybrids",
  "devDependencies": {
    "vite": "^7.2.2"
  },
  "dependencies": {
    "hybrids": "9.1.20",
    "wc": "workspace:*"
  },
  "wireit": {
    "compile": {
      "files": [
        "index.html",
        "src",
        "vite.config.js"
      ],
      "output": [
        "dist"
      ],
      "command": "vite build"
    },
    "test": {
      "files": [
        "dist"
      ],
      "dependencies": [
        "compile",
        "../__shared__/tests:test-files"
      ],
      "command": "pnpm run --filter tests test",
      "output": [
        "results"
      ],
      "env": {
        "CEE_WORKSPACE": "hybrids"
      }
    },
    "build": {
      "dependencies": [
        "test"
      ]
    }
  }
}
