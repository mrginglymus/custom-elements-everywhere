{
  "scripts": {
    "compile": "wireit",
    "test": "wireit",
    "build": "wireit"
  },
  "devDependencies": {
    "vite": "^7.2.2",
    "vite-plugin-solid": "^2.11.10"
  },
  "dependencies": {
    "solid-js": "^1.9.10",
    "wc": "workspace:*"
  },
 "wireit": {
    "compile": {
      "files": [
        "index.html",
        "src",
        "vite.config.js"
      ],
      "output": [
        "dist"
      ],
      "command": "vite build"
    },
    "test": {
      "files": ["dist"],
      "dependencies": [
        "compile",
        "../__shared__/tests:test-files"
      ],
      "command": "pnpm run --filter tests test",
      "output": [
        "results"
      ]
    },
    "build": {
      "dependencies": [
        "test"
      ]
    }
  }
}
