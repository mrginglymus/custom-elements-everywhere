{
  "scripts": {
    "test": "wireit",
    "build": "wireit"
  },
  "library_package": "svelte",
  "library_repo": "sveltejs/svelte",
  "devDependencies": {
    "vite": "^7.2.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.1"
  },
  "dependencies": {
    "svelte": "^5.43.4",
    "wc": "workspace:*"
  },
  "wireit": {
    "compile": {
      "files": [
        "index.html",
        "src",
        "vite.config.js"
      ],
      "output": [
        "dist"
      ],
      "command": "vite build"
    },
    "test": {
      "files": ["dist"],
      "dependencies": [
        "compile",
        "../__shared__/tests:test-files"
      ],
      "command": "pnpm run --filter tests test",
      "output": [
        "results"
      ],
      "env": {
        "CEE_WORKSPACE": "svelte"
      }
    },
    "build": {
      "dependencies": [
        "test"
      ]
    }
  }
}
