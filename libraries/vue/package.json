{
  "scripts": {
    "compile": "wireit",
    "test": "wireit",
    "build": "wireit"
  },
  "library_package": "vue",
  "library_repo": "vuejs/vue",
  "devDependencies": {
    "vite": "^7.2.2",
    "@vitejs/plugin-vue": "^6.0.1"
  },
  "dependencies": {
    "vue": "^3.2.38",
    "wc": "workspace:*"
  },
  "wireit": {
    "compile": {
      "files": [
        "index.html",
        "src",
        "vite.config.js"
      ],
      "output": [
        "dist"
      ],
      "command": "vite build"
    },
    "test": {
      "files": ["dist"],
      "dependencies": [
        "compile",
        "../__shared__/tests:test-files"
      ],
      "command": "pnpm run --filter tests test",
      "output": [
        "results"
      ],
      "env": {
        "CEE_WORKSPACE": "vue"
      }
    },
    "build": {
      "dependencies": [
        "test"
      ]
    }
  }
}
